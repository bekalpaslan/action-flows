{
  "workspace": {
    "enabled": true,
    "backendUrl": "http://localhost:3001",
    "user": "alice",
    "_note_afw_input_inject": "Hook exists at packages/hooks/src/afw-input-inject.ts but unwired. Re-enable when dashboard creates/manages sessions."
  },
  "hooks": {
    "PostCommit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx packages/hooks/src/afw-learning-closure.ts",
            "timeout": 15
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node packages/hooks/dist/hooks/src/afw-session-start.js",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node packages/hooks/dist/hooks/src/afw-session-end.js",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node packages/hooks/dist/hooks/src/afw-step-spawned.js",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "node packages/hooks/dist/hooks/src/afw-control-check.js",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node packages/hooks/dist/hooks/src/afw-output-capture.js",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node packages/hooks/dist/hooks/src/afw-format-check.js",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "node packages/hooks/dist/hooks/src/afw-chain-parse.js",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node packages/hooks/dist/hooks/src/afw-step-completed.js",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
