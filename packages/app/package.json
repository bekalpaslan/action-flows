{
  "name": "@afw/app",
  "version": "0.1.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "contract:compliance": "tsx src/contracts/check-compliance.ts",
    "analyze": "vite build --mode analyze && open dist/index.html",
    "analyze:report": "vite build --mode analyze",
    "perf:check": "lighthouse --chrome-flags='--headless=new' http://localhost:5173",
    "electron-dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-build": "vite build && electron-builder --publish never",
    "electron-build:win": "vite build && electron-builder --win --x64 --publish never",
    "electron-build:mac": "vite build && electron-builder --mac --x64 --arm64 --publish never",
    "electron-build:linux": "vite build && electron-builder --linux --x64 --publish never",
    "electron-build:all": "vite build && electron-builder --win --mac --linux --publish never"
  },
  "dependencies": {
    "@afw/shared": "workspace:*",
    "@monaco-editor/react": "^4.7.0",
    "@reactflow/core": "^11.10.0",
    "@types/dagre": "^0.7.53",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-search": "^0.16.0",
    "d3": "^7.9.0",
    "dagre": "^0.8.5",
    "electron-is-dev": "^3.0.1",
    "monaco-editor": "^0.45.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-window": "^1.8.10",
    "reactflow": "^11.10.0",
    "rehype-raw": "^7.0.0",
    "web-vitals": "^5.1.0",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.1",
    "@lhci/cli": "^0.12.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/glob": "^9.0.0",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^9.2.1",
    "electron": "^35.7.5",
    "electron-builder": "^26.7.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^10.3.10",
    "happy-dom": "^20.7.0",
    "jest-axe": "^10.0.0",
    "lighthouse": "^12.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vite": "^6.2.0",
    "vite-bundle-visualizer": "^1.2.0",
    "vite-plugin-electron": "^0.29.0",
    "vitest": "^4.0.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.actionflows.workspace",
    "productName": "ActionFlows Workspace",
    "copyright": "Copyright Â© 2026 ActionFlows",
    "files": [
      "dist-electron/**/*",
      "!node_modules/**/*",
      "!src/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist",
        "to": "backend/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend/node_modules",
        "to": "backend/node_modules",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend/package.json",
        "to": "backend/package.json"
      },
      {
        "from": "dist",
        "to": "app-dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ActionFlows Workspace"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "ActionFlows Workspace ${version}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png",
      "category": "Development",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    }
  }
}
