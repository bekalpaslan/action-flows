{
  "name": "@afw/workspace",
  "version": "0.0.1",
  "description": "ActionFlows Dashboard - Multi-package monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.0.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "dev:backend": "pnpm -F @afw/backend dev",
    "dev:app": "pnpm -F @afw/app dev",
    "dev:electron": "pnpm -F @afw/app dev:electron",
    "type-check": "pnpm -r type-check",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:e2e": "bash test/curl-commands.sh",
    "test:e2e:docs": "echo 'See E2E_TEST_GUIDE.md for complete testing instructions'",
    "test:e2e:cosmic": "playwright test --config test/playwright.cosmic.config.ts",
    "test:pw": "playwright test",
    "test:pw:ui": "playwright test --ui",
    "test:pw:headed": "playwright test --headed",
    "test:pw:report": "playwright show-report",
    "health:check": "tsx scripts/health-check.ts",
    "health:check:ci": "tsx scripts/health-check-ci.ts",
    "ci:contracts": "tsx scripts/health-check-ci.ts",
    "routing:validate": "tsx packages/hooks/src/validate-routing.ts",
    "setup:hooks": "bash scripts/setup-hooks.sh",
    "generate:tests": "tsx scripts/generate-test-scaffolds.ts",
    "build:desktop": "pnpm -F @afw/shared build && pnpm -F @afw/backend build && pnpm -F @afw/app electron-build:win",
    "contracts:validate": "tsx packages/backend/src/cli/validate-contracts.ts",
    "contract:validate": "pnpm -F @afw/shared contract:validate"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  },
  "pnpm": {
    "overrides": {
      "tar": ">=7.5.7"
    }
  }
}
